
{
  "name": "Alzam Customer AI Automation",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "alzam-style-ai"
      },
      "name": "Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [200, 300]
    },
    {
      "parameters": {
        "functionCode": "const message = $json.body.toLowerCase();\n\nif (message.includes('price') || message.includes('cost')) {\n  return [{ intent: 'price' }];\n} else if (message.includes('product') || message.includes('catalog')) {\n  return [{ intent: 'product' }];\n} else if (message.includes('order') || message.includes('buy') || message.includes('purchase')) {\n  return [{ intent: 'order' }];\n} else {\n  return [{ intent: 'general' }];\n}"
      },
      "name": "Detect Intent (Function)",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [400, 300]
    },
    {
      "parameters": {
        "propertyName": "intent",
        "rules": {
          "rules": [
            {
              "value": "price",
              "output": 0
            },
            {
              "value": "product",
              "output": 1
            },
            {
              "value": "order",
              "output": 2
            }
          ]
        }
      },
      "name": "Switch by Intent",
      "type": "n8n-nodes-base.switch",
      "typeVersion": 1,
      "position": [600, 300]
    },
    {
      "parameters": {
